extends ../base.pug

block variables
    - var template = 'portfolio'

block body
    .portfolio(data-background="" data-color="")
        //- Scroll wrapper
        .portfolio__wrapper
            //- layer changer
            .layer__changer__wrapper
                button.layer__changer All Projects
            .portfolio__banner
                //- slider
                .portfolio__banner__inner.slider__wrapper
                    ul.portfolio__list
                        li.portfolio__item
                            a.portfolio__link(href="/work/ali-ali" data-link="1")
                                figure.portfolio__item__pic__wrapper
                                    img.portfolio__item__pic(data-src="/heroes/1-hero.webp", alt="Work Picture")
                        li.portfolio__item
                            a.portfolio__link.delay(href="/" data-link="2")
                                figure.portfolio__item__pic__wrapper
                                    img.portfolio__item__pic(data-src="/heroes/2-hero.webp", alt="Work Picture")
                        li.portfolio__item
                            a.portfolio__link(href="/" data-link="3")
